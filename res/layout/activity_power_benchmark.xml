<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView android:id="@+id/textView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="" 
              android:textColor="@android:color/white" 
     />
    
    <View
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:layout_marginTop="10dp"
             android:background="#FFFFFF"/>

    <TextView
        android:id="@+id/othertext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CONTROL TEST"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">	
		     <Button android:id="@+id/buttonStartControl"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:layout_marginRight="10dp"		            
		    		android:background="#F5F6CE"
		            android:text="Start Control Test" />
		     <Button android:id="@+id/buttonStopControl"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		    		android:background="#F5F6CE"		            
		            android:text="Stop Control Test" />
 	 </LinearLayout>
    
	<View
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:layout_marginTop="10dp"
             android:background="#FFFFFF"/>
	
	<TextView
        android:id="@+id/othertext2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SELECT REASONER OR SIMULATION"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >                
         <Button android:id="@+id/buttonHermit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"		            
		    android:background="#FFFFFF"
            android:text="Hermit" />
     
    	 <Button android:id="@+id/buttonAndroJena"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:text="AndroJena" />               
    </LinearLayout>
    
    
    
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
		     <Button android:id="@+id/buttonPellet"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:layout_marginTop="10dp"
		            android:layout_marginRight="10dp"		            
		            android:background="#FFFFFF"
		            android:text="Pellet" />
		     
		     <Button android:id="@+id/buttonNull"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:background="#FAAC58"
		            android:layout_weight="1"	
		            android:layout_marginTop="10dp"	            
		            android:text="Simulate" />
 	 </LinearLayout>
     
   
	<View
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:layout_marginTop="10dp"
             android:background="#FFFFFF"/>
	<TextView
        android:id="@+id/othertext5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SELECT DATASET AND REASONING TASK"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp" />
	
     
    <TextView
        android:id="@+id/mystate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerstate"
        android:layout_marginLeft="15dp"
        android:text="Select size of LUBM ontology dataset:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />
  
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c0c0c0"
       	android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp" 
        >
	    <Spinner
	        android:id="@+id/spinnerstate"        
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"
		   	android:popupBackground="#FFFFFF"
	         />
    </LinearLayout>
    
    
    
    <TextView
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerstate"
        android:layout_marginLeft="15dp"
        android:text="Select reasoning task: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c0c0c0"
       	android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp" 
        >
	    <Spinner
	        android:id="@+id/spinnerstate2"        
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"
		    android:popupBackground="#FFFFFF"
	         />
    </LinearLayout>
    
   <View
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:layout_marginTop="10dp"
             android:background="#FFFFFF"/>
	<TextView
        android:id="@+id/othertext4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="INSPECT RESULTS"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp" />
    
   <Button
        android:id="@+id/openpopup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Inspect results" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        
        />
   
   
   
   
   
</LinearLayout>

   </ScrollView>
