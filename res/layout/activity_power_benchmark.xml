<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                  android:background="#d3d3d3"
              
              android:orientation="vertical" >
    <TextView android:id="@+id/textView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Hello, I am a TextView" />
    <Button android:id="@+id/buttonHermit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hermit" />
     
     <Button android:id="@+id/buttonAndroJena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AndroJena" />
     <Button android:id="@+id/buttonPellet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pellet" />
     
     <Button android:id="@+id/buttonNull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulate" />

    <TextView
        android:id="@+id/mystate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerstate"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Currently selected LUBM ontology containing"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/spinnerstate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />
    
    
    <Button
        android:id="@+id/openpopup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Open Popup Window" />
     
</LinearLayout>